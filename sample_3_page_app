from PyQt5 import QtCore, QtGui, QtWidgets
from p2 import *


class Ui_wlc(object):
    def setupUi(self, wlc):
        self.wlc = wlc
        wlc.setObjectName("wlc")
        wlc.resize(400, 300)
        self.listWidget_1 = QtWidgets.QListWidget(wlc)
        self.listWidget_1.setGeometry(QtCore.QRect(80, 50, 250, 200))
        self.listWidget_1.setObjectName("listWidget_1")
        self.pushButton_1 = QtWidgets.QPushButton(wlc)
        self.pushButton_1.setGeometry(QtCore.QRect(80, 20, 250, 25))
        self.pushButton_1.setObjectName("pushButton_1")
        self.pushButton_1.clicked.connect(self.op1)

        self.retranslateUi(wlc)
        QtCore.QMetaObject.connectSlotsByName(wlc)

    def retranslateUi(self, wlc):
        _translate = QtCore.QCoreApplication.translate
        wlc.setWindowTitle(_translate("wlc", "Form"))
        self.pushButton_1.setText(_translate("wlc", "List Database"))

   
    def op1(self):
        print("Hi1")
        self.lgn = QtWidgets.QWidget()
        self.ui = Ui_lgn(self.wlc)  # Pass reference to wlc
        self.ui.setupUi(self.lgn)
        self.lgn.show()
 


if __name__ == "__main__":
    import sys
    app = QtWidgets.QApplication(sys.argv)
    wlc = QtWidgets.QWidget()
    ui = Ui_wlc()
    ui.setupUi(wlc)
    wlc.show()
    sys.exit(app.exec_())

